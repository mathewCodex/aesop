<script>
// new navigation close button. Remove if not using smart menu

$(document).ready(function(){

  $(".site-header__icons").click(function(){
    $(".close-menu").hide();

    //To restore:
    $('html, body').css({
    overflow: 'auto',
    height: 'auto'
    }); 
  });

$(".tmenu_item_link").click(function(){
    $(".close-menu").fadeIn();

    //This will completely disable scrolling:
    $('html, body').css({
    overflow: 'hidden',
    height: '100%'
    });
    
  });
});
</script>

