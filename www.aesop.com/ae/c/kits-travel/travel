    var styles = ["https://cdn.shopify.com/shopifycloud/checkout-web/assets/815.baseline.en.b04a163cb06f6fd686ce.css", "https://cdn.shopify.com/shopifycloud/checkout-web/assets/app.baseline.en.75d71fd3b6e0e27eff47.css", "https://cdn.shopify.com/shopifycloud/checkout-web/assets/739.baseline.en.c50ff8f265d5515ea98d.css"];

    function prefetch(url, as, callback) {
      var link = document.createElement('link');
      if (link.relList.supports('prefetch')) {
        link.rel = 'prefetch';
        link.fetchPriority = 'low';
        link.as = as;
        link.href = url;
        link.onload = link.onerror = callback;
        document.head.appendChild(link);
      } else {
        var xhr = new XMLHttpRequest();
        xhr.open('GET', url, true);
        xhr.onloadend = callback;
        xhr.send();
      }
    }

    function prefetchAssets() {
      var resources = [].concat(
        scripts.map(function(url) { return [url, 'script']; }),
        styles.map(function(url) { return [url, 'style']; })
      );
      var index = 0;
      (function next() {
        var res = resources[index++];
        if (res) prefetch(res[0], res[1], next);
      })();
    }

    addEventListener('load', prefetchAssets);
   })();
</script>
