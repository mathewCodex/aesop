<script>
  function on() {
  document.getElementById("overlay").style.display = "block";
  document.getElementById("menu-open").style.cssText = "display: block";
  document.body.style.overflow = "hidden"; 
  document.getElementById("openpanel").classList.remove("wow");
}
 

function off() {
  document.body.style.overflow = "scroll";  
  document.getElementById("overlay").style.display = "none";
  document.getElementById("menu-open").style.cssText = "display: none; margin-left: 0";

}
  
</script>

<script>

</script>
